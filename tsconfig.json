{
  "compilerOptions": {
      "baseUrl": ".",
      "paths": { "*": ["types/*"] },
    "noImplicitAny": true,
    "module": "commonjs",
    "removeComments": true,
    "preserveConstEnums": true,
    "target": "es2015",
    "sourceMap": true,
    "lib": ["es2015", "dom", "dom.iterable"],
    "jsx": "react",
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "src",
    "noUnusedLocals": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedParameters": false,
    "pretty": true,
    "noFallthroughCasesInSwitch": true,
    "allowUnreachableCode": false,
    "experimentalDecorators": true,
    "downlevelIteration": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}